{
  "$schema": "http://json-schema.org/schema",
  "id": "api-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "prefix": {
      "type": "string",
      "description": "Prefix name for library"
    },
    "gqlfiy": {
      "type": "boolean",
      "description": "if true adds gqlfiy functionality"
    },
    "basicgraphql": {
      "type": "boolean",
      "description": "if true adds basic graphql functionality"
    }
  },
  "required": [
    "name"
  ]
}